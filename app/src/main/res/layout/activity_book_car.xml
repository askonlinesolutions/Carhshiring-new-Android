<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carshiring.activities.home.BookCarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/qoutesbottom">

        <LinearLayout
            android:id="@+id/linear_uper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                style="@style/simpleRectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/journey_detail_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPlaceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_address"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="New Delhi Downtown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_two_way" />

                    <TextView
                        android:id="@+id/txtPlaceName_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_address"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="New Delhi Downtown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bg"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_bg">

                            <TextView
                                android:id="@+id/tvFromDT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Fri,27 Jan,2017\n10 AM" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_bg">

                            <TextView
                                android:id="@+id/tvToDT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Fri,27 Jan,2017\n10 AM" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_modelname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Toyota Innova Diesel"
                    android:textColor="@color/bottom_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txtOrSimilar"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Light_grey" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_car"
                        android:layout_width="match_parent"
                        android:layout_height="170dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/bottom_color"
                        android:orientation="vertical"
                        android:paddingEnd="5dp">

                        <TextView
                            android:id="@+id/txt_carPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:gravity="left|center|top"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="INR 5,540.64"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/oneway"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:text="One way "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/driverSurCharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:text="One way "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtpoint_cal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:paddingBottom="5dp"
                            android:paddingStart="10dp"
                            android:text="Points Collected:"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img_carlogo"
                            android:layout_width="82dp"
                            android:layout_height="54dp"
                            android:src="@drawable/ic_brand_logo" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressbar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progressbar1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end|center"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_additional_driver" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="First Additional Driver Included"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/action_terms"
                android:textColor="@color/bottom_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Light_grey" />

            <EditText
                android:id="@+id/edtFlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/activity_book_car_flight_number"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/bottom_color"
                android:textSize="@dimen/small_size"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/Light_grey" />

            <TextView
                android:id="@+id/txt_savequote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Save and Quote"
                android:textColor="@color/bottom_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_full_prote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/fullly_protected"
                android:textColor="@color/bottom_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_full_prote_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Full Protected"
                android:textColor="@color/black"
                android:textSize="@dimen/extra_small_size"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:background="@color/Light_grey" />


            <TextView
                android:id="@+id/txt_additional_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Additional Extras"
                android:textColor="@color/bottom_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:id="@+id/totalExtraCharge"
                android:textColor="@color/redStrong"
                android:textSize="@dimen/extra_small_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:id="@+id/viewExtra"
                android:visibility="gone"
                android:background="@color/Light_grey" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/extraRecycler"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/extraadded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/qoutesbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_booking_txtSaveLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Save later"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <include layout="@layout/bottom_toolbar"></include>
    </LinearLayout>

</RelativeLayout>
